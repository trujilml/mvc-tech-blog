<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">Create New Post</button>
</section>


{{#if posts.length}}
<section>
  <h2>Dashboard</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/create-post.js"></script>